@using LocaizableProject.Controllers
@using Microsoft.AspNetCore.Mvc.Localization

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer


@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* Center the text */
    .text-center {
        text-align: center;
        margin-top: 50px; /* Adjust as needed */
    }

    /* Style the headings */
    .display-4 {
        font-size: 2.5rem;
        color: #333;
    }

    /* Style the paragraph */
    h3 {
        font-size: 1.2rem;
        color: #666;
        margin-top: 20px;
    }

    /* Style the container */
    .container {
        margin-top: 50px; /* Adjust as needed */
    }

    /* Style the form */
    .form-group {
        margin-bottom: 20px;
    }

    /* Style the labels */
    label {
        font-weight: bold;
    }

    /* Style the input fields */
    .form-control {
        width: 100%;
        padding: 10px;
        font-size: 1rem;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    /* Style the textarea */
    textarea.form-control {
        resize: vertical;
    }

    /* Style the submit button */
    .btn-primary {
        background-color: #007bff;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        /* Hover effect for the submit button */
        .btn-primary:hover {
            background-color: #0056b3;
        }
</style>


<div class="text-center">
    <h1 class="display-4">@localizer["Welcome"]</h1>
    <h1 class="display-4">@ViewData["Welcome"]</h1>

    <h3>
        <p>@localizer["The Writing Life podcast is the podcast for anyone who writes. Every fortnight, we speak to writers and educators to help you improve your writing, from theme, structure and routine to language, character and writing specific genres."]</a>.</p>
    </h3>
</div>


<div class="container">
    <h2>@localizer["Contact Form"]</h2>
    <img width ="200px" height="200px" src="@localizer["image"]"></img>
    <form action="#" method="post">
        <div class="form-group">
            <label>@localizer["Name"]</label>
            <input type="text" class="form-control" name="name" required>
        </div>
        <div class="form-group">
            <label>@localizer["Age"]</label>
            <input type="number" class="form-control" name="age" required>
        </div>
        <div class="form-group">
            <label>@localizer["Address"]</label>
            <textarea class="form-control" rows="5" name="address" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">@localizer["Submit"]</button>
        
    </form>
</div>

